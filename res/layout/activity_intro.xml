<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/battery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Find is the battery level?" />

    <Button
        android:id="@+id/start_service_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/battery_button"
        android:layout_alignRight="@+id/battery_button"
        android:layout_below="@+id/battery_button"
        android:layout_marginTop="26dp"
        android:text="Start Service" />

    <Button
        android:id="@+id/stop_service_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_service_button"
        android:layout_alignRight="@+id/start_service_button"
        android:layout_below="@+id/start_service_button"
        android:layout_marginTop="19dp"
        android:text="Stop Service" />

</RelativeLayout>
